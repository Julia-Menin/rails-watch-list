<div class = "container, m-2">
  <h1>Welcome to your Movie Lists</h1>
  <hr>

  <ul>
    <% @lists.each do |list| %>
      <li><%= link_to list.name, list_path(list) %></li>
      <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </ul>

  <%= link_to "Add a new list", new_list_path, class: "btn m-1 btn-primary" %>
</div>
