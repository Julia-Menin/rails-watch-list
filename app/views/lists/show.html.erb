<div class = "m-2">
  <h1><%= @list.name %></h1>

  <h2><% @list.bookmarks.each do |bookmark| %></h2>
    <h3><%= bookmark.movie.title %></h3>
    <h3> <%= link_to "Delete Bookmark", list_bookmark_path(bookmark.id), class: "btn m-1 btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></h3>
    <img src = <%= bookmark.movie.poster_url %>, alt = "">
    <h3><%= bookmark.movie.overview %></h3>
    <h4><%= bookmark.comment %></h4>
    <hr>
    <% end %>

  <%= link_to "Add a Bookmark", new_list_bookmark_path(@list), class: "btn m-1 btn-warning" %>
  <%= link_to "Go Back to Home", lists_path, class: "btn m-1 btn-success" %>
</div>
